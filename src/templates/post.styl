:root
  --font-color #212529
  --font-color-transparent rgba(33,37,41,0)
  --background-color #EFEFEF
  --accent-color-1 #2B3A42
  --accent-color-2 #BDD4DE
  --accent-color-3 #FF530D
  --connector-width 4px
  
.full-post
  grid-area index
  font-size 20px

  h1
    margin 4rem 0rem 1rem 0rem
    

  
  .header-wrapper
    display inline
    
    .chain
      opacity 0
      transition all 0.2s ease

      .active
        opacity 1 !important
    
    *
      display inline
    
  .post-date
    display block
    font-size 1.5em
    margin-bottom 2rem
      

  a:not(.tag)
    color var(--accent-color-3)
    transition all 0.15s ease
    
    &:hover
      color var(--accent-color-3)
      
  code
    background-color darken(#EFEFEF, 10)
    padding 0em 0.25em

  #disqus_thread
    margin-top 32px
    
@media all and (max-width: 768px) 
  .full-post  
    h1
      font-size 8vw
      margin 30px 0px
      
    .body
      .tag
        font-size 5vw